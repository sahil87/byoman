#!/bin/bash
# Quick idea capture - append to .specify/ideas.md
set -e

if [ $# -eq 0 ]; then
  echo "Usage: ideas <your idea>" >&2
  exit 1
fi

# Generate 4-char alphanumeric ID
id=$(LC_ALL=C tr -dc 'a-z0-9' < /dev/urandom | head -c 4)

echo "- [ ] [$id] $(date +%Y-%m-%d): $*" >> "$(git rev-parse --show-toplevel)/.specify/ideas.md"
echo "Added idea [$id]"
